@model WechatPayPlatform.Models.ComeBill

@{
    ViewBag.Title = "确认支付";
}

@section scripts{
    @Scripts.Render("~/Scripts/labs.js")
    @Scripts.Render("~/Scripts/jquery.raty.js")
    @Styles.Render("~/Content/jquery.raty.css")

}


<style>
    .billstatus {
        font-weight: 700;
        font-family: 'Microsoft YaHei';
        color: orange;
        margin-bottom: 25px;
    }

    .buttonp {
        text-align: right;
        padding-right: 1em;
    }

    .btn {
        background-color: rgba(228, 143, 24,1);
        widows:100%;
    }

    .container-fluid {
        padding-top: 8%;
    }

    .thumbnail {
        padding-top: 5px;
        padding-left: 15px;
    }
</style>

<div class="container-fluid">
    <div class=" thumbnail">
        <h3 class="billstatus">上门洗车</h3>
        <p>下单时间：@Model.CreateDate </p>
        <p>车牌号：@Model.CarNumber</p>
        <p>位置：@Model.Address</p>
        <p>完成时间：@Model.FinishTime.Value.ToString("yyyy年MM月dd日 HH:mm")</p>
        <p> 金 额 ：@Model.Count  元 </p>
        @using (Html.BeginForm("Pay", "GetMoney", FormMethod.Post, new { role = "form", @class = "form-inline" }))
        {
            <input type="hidden" name="billnumber" value="@Model.innerNumber" />
            <p class="buttonp">
                <button class="btn btn-default" type="submit" style=" font-family:'Microsoft YaHei' ;font-size:small;font-weight:400; color: #FFF;">确认完成</button>
            </p>
        }
    </div>
    <div>
        <span>接单速度 </span>
        <span id="s1" data-path="../images"></span>
    </div>
    <div>
        <span>。。。。 </span>
        <span id="s2" data-path="../images"></span>
    </div>
    <div>
        <span>服务质量 </span>
        <span id="s3" data-path="../images"></span>
    </div>
</div>

<script type="text/javascript">
    var s1 = 0;
    var s2 = 0;
    var s3 = 0;

    $(function () {
        $("#s1").raty(
            {
                path: function () {
                    return this.getAttribute('data-path');
                },
                click: function (score, evt) {
                    s1 = score;
                }
            });
        $("#s2").raty(
           {
               path: function () {
                   return this.getAttribute('data-path');
               },
               click: function (score, evt) {
                   s2 = score;
               }
           });
        $("#s3").raty(
           {
               path: function () {
                   return this.getAttribute('data-path');
               },
               click: function (score, evt) {
                   s3 = score;
               }
           });
    })
</script>
